{
  "name": "ckb-time-generator",
  "version": "1.0.0",
  "description": "The generator of time_index_state_type_script and time_info_type_script",
  "main": "index.js",
  "repository": "https://github.com/duanyytop/ckb-time-scripts-generator",
  "author": "eric.wang",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start:timestamp": "tsc && NODE_CONFIG_DIR=./dist/config  node dist/src/start-timestamp.js",
    "start:blocknumber": "tsc && NODE_CONFIG_DIR=./dist/config  node dist/src/start-blocknumber.js",
    "start:quote": "tsc && NODE_CONFIG_DIR=./dist/config  node dist/src/start-quote.js",
    "dev:timestamp": "NODE_ENV=testnet ts-node src/start-timestamp.ts",
    "dev:blocknumber": "NODE_ENV=testnet ts-node src/start-blocknumber.ts",
    "dev:quote": "NODE_ENV=testnet ts-node src/start-quote.ts",
    "dev": "ts-node src/start-blocknumber.ts",
    "lint": "eslint src/**/*.js --fix",
    "reload_production": "pm2 reload ecosystem.config.js"
  },
  "dependencies": {
    "@nervosnetwork/ckb-sdk-core": "^0.43.0",
    "@nervosnetwork/ckb-sdk-utils": "^0.43.0",
    "config": "^3.3.6",
    "node-fetch": "^2.6.1",
    "typescript": "^4.3.5",
    "ws": "^7.5.2"
  },
  "devDependencies": {
    "@nervosnetwork/ckb-types": "^0.43.0",
    "@types/node": "^16.0.1",
    "@types/ws": "^7.4.7",
    "eslint": "^7.30.0",
    "husky": "^7.0.1",
    "ts-node": "^10.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}

{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "lib": ["ES2022", "dom"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "ES2022",
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
